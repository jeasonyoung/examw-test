<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<!-- service -->
	<!-- 系统管理 服务接口实现 begin -->
	<!-- 菜单服务 -->
	<bean id="menuService" class="com.examw.test.service.security.impl.MenuServiceImpl">
	    <!-- 菜单数据操作接口 -->
		<property name="menuDao" ref="menuDao" />
		<!-- 菜单文件 -->
		<property name="menuFile" value="${menuFile}"/>
		<!-- 系统ID -->
		<property name="systemId" value="${systemId}"/>
		<!-- 系统名称 -->
		<property name="systemName" value="${systemName}" />
	</bean>
	<!-- 基础权限服务 -->
	<bean id="rightService"  class="com.examw.test.service.security.impl.RightServiceImpl">
		<!-- 基础权限数据接口 -->
		<property name="rightDao" ref="rightDao" />
		<!-- 权限名称 -->
		<property name="rightNameMap">
		    <map>
		    	 <!-- 查看 -->
		         <entry key="1"  value="${RIGHT_VIEW}" />
		         <!-- 更新 -->
		         <entry key="2" value="${RIGHT_UPDATE}" />
		         <!-- 删除 -->
		         <entry key="3" value="${RIGHT_DELETE}" />
		    </map>
		</property>
	</bean>
	<!-- 菜单权限服务 -->
	<bean id="menuRightService"  class="com.examw.test.service.security.impl.MenuRightServiceImpl">
		<!-- 菜单权限数据接口 -->
	    <property name="menuRightDao" ref="menuRightDao" />
	    <!-- 菜单数据接口 -->
	    <property name="menuDao" ref="menuDao" />
	    <!-- 基础权限数据接口 -->
	    <property name="rightDao" ref="rightDao" />
	</bean>
	<!-- 角色设置服务 -->
	<bean id="roleService"  class="com.examw.test.service.security.impl.RoleServiceImpl">
		<!-- 角色数据接口 -->
		<property name="roleDao" ref="roleDao" />
		<!-- 菜单权限数据接口 -->
		<property name="menuRightDao" ref="menuRightDao" />
		<!-- 角色状态 -->
		<property name="roleStatusNameMap">
	   		<map>
	   			<entry key="0"  value="${STATUS_DISABLE}" />
	   			<entry key="1"  value="${STATUS_ENABLED}" />
	   		</map>
	   </property>
	</bean>
	<!-- 密码工具 -->
	<bean id="passwordHelper"  class="com.examw.test.support.PasswordHelper">
		<!-- 验证密码算法 -->
		<property name="algorithmName"  value="${algorithmName}" />
		<!-- 迭代次数 -->
		<property name="hashIterations"  value="${hashIterations}"  />
	</bean>
	<!-- 用户管理服务 -->
	<bean id="userService"  class="com.examw.test.service.security.impl.UserServiceImpl">
		<!-- 用户数据接口 -->
		<property name="userDao"  ref="userDao" />
		<!-- 角色数据接口 -->
		<property name="roleDao"  ref="roleDao" />
		<!-- 用户缓存接口 -->
		<property name="userCache" ref="userRealm" />
		<!-- 性别 -->
		<property name="genderNameMap">
			<map>
			    <entry key="0" value="${GENDER_NONE}" />
	   			<entry key="1"  value="${GENDER_MALE}" />
	   			<entry key="2"  value="${GENDER_FEMALE}" />
	   		</map>
		</property>
		<!-- 用户状态 -->
		<property name="statusNameMap">
			<map>
	   			<entry key="0"  value="${STATUS_DISABLE}" />
	   			<entry key="1"  value="${STATUS_ENABLED}" />
	   		</map>
		</property>
		<!-- 密码工具 -->
		<property name="passwordHelper"  ref="passwordHelper" />
	</bean>
	<!-- 登录日志服务 -->
	<bean id="loginLogService"  class="com.examw.test.service.security.impl.LoginLogServiceImpl">
	    <!-- 登录日志数据接口 -->
		<property name="loginLogDao" ref="loginLogDao" />
	</bean>
	<!-- 用户验证服务 -->
	<bean id="userAuthentication" class="com.examw.test.service.security.impl.UserAuthenticationImpl">
	    <!-- 验证码类型 0-数字，1-大小写字母混合，2-数字和大小写字母混合，3-数字和大写字母混合，4-数字和小写字母混合，5-大写字母，6-小写字母 -->
	    <property name="verifyCodeType" value="${verifyCodeType}" />
	    <!-- 验证码长度，不配置默认为4位 -->
	    <property name="verifyCodeLength" value="${verifyCodeLength}" />
	    <!-- 验证码图片宽度，4个字为90，默认为90 -->
	    <property name="verifyCodeImageWidth" value="${verifyCodeImageWidth}" />
	    <!-- 验证码图片高度，默认为30 -->
	    <property name="verifyCodeImageHeight" value="${verifyCodeImageHeight}" />
	    <!-- 验证码图片干扰线，默认为3 -->
	    <property name="verifyCodeImageInterLine" value="${verifyCodeImageInterLine}" />
	    <!-- 日志记录服务 -->
	    <property name="loginLogService" ref="loginLogService" />
	</bean>
	<!-- 系统管理 服务接口实现 end -->
</beans>