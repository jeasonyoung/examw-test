<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
    <!-- 配置任务定时出发器 -->
    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <!-- 添加触发器 -->
        <property name="triggers">
            <list>
                <!-- 自动发布试卷任务 -->
                <bean class="org.springframework.scheduling.quartz.CronTriggerBean">
                    <!-- 任务明细 -->
                    <property name="jobDetail">
                        <bean class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
                            <property name="targetObject" ref="paperReleaseService" />
                            <property name="targetMethod" value="updateRelease" />
                        </bean>
                    </property>
                    <!-- 触发时间 -->
                    <property name="cronExpression" value="0 0/5 * * * ?" />
                </bean>
                <!-- 自动检查试卷状态任务 -->
                <bean class="org.springframework.scheduling.quartz.CronTriggerBean">
                    <!-- 任务明细 -->
                    <property name="jobDetail">
                        <bean class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
                            <property name="targetObject" ref="paperReleaseService" />
                            <property name="targetMethod" value="updateCheckRelease" />
                        </bean>
                    </property>
                    <!-- 触发时间 -->
                    <property name="cronExpression" value="0 0/2 * * * ?" />
                </bean>
                <!-- 自动创建每日一练任务 
                <bean class="org.springframework.scheduling.quartz.CronTriggerBean">
                    	 任务明细 
                    <property name="jobDetail">
                        <bean class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
                            <property name="targetObject" ref="exercisesDailyService" />
                            <property name="targetMethod" value="addAutoDailyPapers" />
                        </bean>
                    </property>
                    	触发时间 
                    <property name="cronExpression" value="0 0 2 * * ?" />
                </bean>
                -->
                
                <!-- 自动发布静态页面 -->
                <bean class="org.springframework.scheduling.quartz.CronTriggerBean">
                    <!-- 任务明细 -->
                    <property name="jobDetail">
                        <bean class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
                            <property name="targetObject" ref="publishService" />
                            <property name="targetMethod" value="updatePublish" />
                        </bean>
                    </property>
                    <!-- 触发时间 -->
                    <property name="cronExpression" value="0 20 2 * * ?" />
                </bean>
                
                <!--  自动远程发布静态页面 -->
                <bean class="org.springframework.scheduling.quartz.CronTriggerBean">
                    <!-- 任务明细 -->
                    <property name="jobDetail">
                        <bean class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
                            <property name="targetObject" ref="publishService" />
                            <property name="targetMethod" value="updateAutoRemotePublish" />
                        </bean>
                    </property>
                    <!-- 触发时间 -->
                    <property name="cronExpression" value="0 0/2 * * * ?" />
                </bean>
                
                 <!-- 自动产品试卷缓存 -->
                 <bean class="org.springframework.scheduling.quartz.CronTriggerBean">
                     <!-- 任务明细 -->
                    <property name="jobDetail">
                        <bean class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
                            <property name="targetObject" ref="dataSyncService" />
                            <property name="targetMethod" value="updateAutoProductPapersCache" />
                        </bean>
                    </property>
                    <!-- 触发时间 -->
                    <property name="cronExpression" value="0 10 1 * * ?" />
                 </bean>
                 
            </list>
        </property>
    </bean>
</beans>